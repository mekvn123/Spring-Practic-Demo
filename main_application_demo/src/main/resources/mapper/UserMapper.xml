<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.main_application_demo.adapter.persistence.UserMapper">
    <sql id="Base_Column_List">
        user_id,user_name,user_password,user_email
    </sql>

    <select id="findUserById" resultType="com.example.main_application_demo.domain.User">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_info
        <where>
            user_id = #{userId}
        </where>
    </select>

    <insert id="insertUser">
        INSERT INTO user_info
        VALUES (#{param.userId}, #{param.userName}, #{param.userPassword}, #{param.userEmail})
    </insert>

    <update id="updateUser">
        UPDATE user_info
        SET user_name     = #{param.userName},
            user_password = #{param.userPassword},
            user_email    = #{param.userEmail}
        WHERE user_id = #{param.userId}
    </update>

    <select id="findUserPostById" resultMap="UserPost">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_info
        <where>
            user_id = #{userId}
        </where>
    </select>

    <update id="updateUserInfo"></update>

    <insert id="insertUserInfo"></insert>
    <insert id="insertUsers"></insert>

    <resultMap id="UserPost" type="com.example.main_application_demo.domain.UserInfo">
        <id property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="userPassword" column="user_password"/>
        <result property="userEmail" column="user_email"/>
        <collection property="posts" ofType="com.example.main_application_demo.domain.Post" column="user_id"
                    select="com.example.main_application_demo.adapter.persistence.PostMapper.findByUserId"/>
    </resultMap>
</mapper>
